<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/me_item_height"
        android:background="@color/white"
        android:orientation="horizontal">
        <com.qgyyzs.globalcosmetics.ui.customview.ClearEditText
            android:id="@+id/code_edit"
            style="@style/my_edittext"
            android:inputType="number"
            android:layout_marginLeft="8dp"
            android:hint="请输入验证码"/>
        <TextView
            android:id="@+id/getcode_text"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="@color/main_color"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/shadow"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/mCodecCancel_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/text_shape_gray"
            android:text="取消"/>

        <Button
            android:id="@+id/mCodecOk_btn"
            android:layout_width="0dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/my_btn"
            android:text="确定"
            android:textColor="@color/white"/>
    </LinearLayout>
</LinearLayout>