<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_chat_userdetail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/main_color"
    tools:context="com.qgyyzs.globalcosmetics.activity.ChatUserdetailActivity">
    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srlEnablePureScrollMode="true"
        app:srlEnableLoadmore="true"
        app:srlDragRate="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/main_color"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/user_img"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="70dp"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="fitXY"
                    android:layout_centerInParent="true"
                    android:background="@drawable/icon_user_defult"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="right"
                        android:text="常驻地"
                        android:textColor="@color/white"
                        android:textSize="@dimen/item_textsize"/>

                    <TextView
                        android:id="@+id/user_place"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="3"
                        android:text="-----"
                        android:textColor="@color/white"
                        android:textSize="@dimen/item_textsize"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="right"
                        android:text="真实姓名"
                        android:textColor="@color/white"
                        android:textSize="@dimen/item_textsize"/>

                    <TextView
                        android:id="@+id/user_realname"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="3"
                        android:text="-----"
                        android:textColor="@color/white"
                        android:textSize="@dimen/item_textsize"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="right"
                        android:text="所在公司"
                        android:textColor="@color/white"
                        android:textSize="@dimen/item_textsize"/>

                    <TextView
                        android:id="@+id/user_company"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="3"
                        android:text="-----"
                        android:textColor="@color/white"
                        android:textSize="@dimen/item_textsize"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="50dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="right"
                        android:text="身份"
                        android:textColor="@color/white"
                        android:textSize="@dimen/item_textsize"/>

                    <TextView
                        android:id="@+id/user_jieshao"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="3"
                        android:text="-----"
                        android:textColor="@color/white"
                        android:textSize="@dimen/item_textsize"/>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@color/shadow_f"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/my_circle_rl"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/user_item_height"
                    android:background="@color/white"
                    android:paddingLeft="20dp"
                    android:paddingRight="15dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:gravity="center|left"
                        android:text="代理信息"
                        android:drawableLeft="@mipmap/ic_me_file"
                        android:drawablePadding="10dp"
                        android:textSize="15sp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:drawableRight="@mipmap/arrow_me"
                        android:gravity="center_vertical|right"
                        android:text="查看"
                        android:textColor="@color/main_color"/>

                </LinearLayout>

                <View
                    style="@style/line_x"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"/>

                <LinearLayout
                    android:id="@+id/product_rl"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/user_item_height"
                    android:background="@color/white"
                    android:paddingLeft="20dp"
                    android:paddingRight="15dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:gravity="center|left"
                        android:text="招商产品"
                        android:drawableLeft="@mipmap/ic_me_file"
                        android:drawablePadding="10dp"
                        android:textSize="15sp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:drawableRight="@mipmap/arrow_me"
                        android:gravity="center_vertical|right"
                        android:text="查看"
                        android:textColor="@color/main_color"/>

                </LinearLayout>

                <View
                    style="@style/line_x"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"/>
                <LinearLayout
                    android:id="@+id/kehu_rl"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/user_item_height"
                    android:background="@color/white"
                    android:paddingLeft="20dp"
                    android:paddingRight="15dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:gravity="center|left"
                        android:text="我的客户"
                        android:drawableLeft="@mipmap/ic_me_file"
                        android:drawablePadding="10dp"
                        android:textSize="15sp"/>

                    <ImageView
                        android:id="@+id/isopen_img"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/open_selector"
                        android:scaleType="fitXY"/>

                </LinearLayout>

                <View
                    style="@style/line_x"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"/>

                <LinearLayout
                    android:id="@+id/remake_ll"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/user_item_height"
                    android:background="@color/white"
                    android:paddingLeft="20dp"
                    android:paddingRight="15dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:gravity="center|left"
                        android:text="备注名"
                        android:drawableLeft="@mipmap/ic_me_file"
                        android:drawablePadding="10dp"
                        android:textSize="15sp"/>

                    <TextView
                        android:id="@+id/mTvRemake"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:drawableRight="@mipmap/arrow_me"
                        android:gravity="center_vertical|right"
                        android:textColor="@color/color_grey_666666"/>

                </LinearLayout>

                <View
                    style="@style/line_x"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"/>

            </LinearLayout>
        </LinearLayout>

    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
    <com.github.mmin18.widget.RealtimeBlurView
        android:id="@+id/blurview"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:visibility="visible"
        app:realtimeOverlayColor="@android:color/transparent"/>
    <androidx.appcompat.widget.Toolbar style="@style/AppTheme.Toolbar"
        android:id="@+id/toolbar"
        android:background="@android:color/transparent"
        app:navigationIcon="?attr/homeAsUpIndicator" >
        <TextView
            android:id="@+id/tv_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:layout_gravity="right"
            android:textSize="18sp"
            android:text="更多"
            android:textColor="@color/white"/>
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true">

        <RelativeLayout
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/text_shape_main">

            <TextView
                android:id="@+id/send_call_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@mipmap/icon_phone" />
        </RelativeLayout>

        <TextView
            android:id="@+id/send_msg_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/text_shape_main"
            android:gravity="center"
            android:text="发消息"
            android:textColor="@color/main_color"/>

        <TextView
            android:id="@+id/add_friend_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/my_btn"
            android:gravity="center"
            android:text="加为好友"
            android:textColor="@color/white"/>
    </LinearLayout>
</FrameLayout>
